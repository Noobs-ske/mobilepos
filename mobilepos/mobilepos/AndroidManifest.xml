<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilepos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MobilePosTheme" >
        <activity
            android:name="com.example.mobilepos.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mobilepos.CatalogActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mobilepos.AddActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mobilepos.UpdateActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" />
         <activity
            android:name="com.example.mobilepos.NewsActivity"
            android:label="title_activity_news"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mobilepos.SaleActivity"
            android:label="@string/title_activity_sale" >
        </activity>
    </application>

</manifest>